<Filechooser>:
    name: "filechooser"
    id: filechooser_name

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 10
        padding: 10

        BoxLayout:
            FileChooserIconView:
                dirselect: True
                on_selection: filename = root.select(*args)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.2)

            Label:
                id: filename

                text: f'Ścieżka pliku: {filename}'
                pos_hint: {"center_x": .5}
                size_hint: (0.5, 0.5)

            Button:
                text: "Select file"
                size: (100, 50)
                size_hint: (None, None)
                # on_release: root.dismiss()


<Select_alg>:
    name: "Select_alg"
    id: Select_alg

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        spacing: 10
        padding: 10
            Button:
                text: "First algorythm"
                size: (100, 50)
                size_hint: (None, None)
            Button:
                text: "Second algorythm"
                size: (100, 50)
                size_hint: (None, None)
            Button:
                text: "Thrid algorythm"
                size: (100, 50)
                size_hint: (None, None)
            Button:
                text: "Fourth algorythm"
                size: (100, 50)
                size_hint: (None, None)