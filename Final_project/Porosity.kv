#:kivy 2.0.0
#:import utils kivy.utils

<Button>:
    font_size: 13
    #background_normal resetuje kolor przycisku - standardowo jest szary, przez co nadanie koloru powoduje wymieszanie go z szarym
    background_normal: ''

    #kolor w odniesieniu do RGB + przezroczystosc (opacity), można ustawiać nadając X/255.0 - musi byc typu float
    background_color: (69/255.0, 74/255.0, 82/255.0, .8)

    #utils to biblioteka która posiada metode zaciągającą kolor z jego kodu HEX:
    #background_color: utils.get_color_from_hex('#ffa12e')


<First_window>:
    name: "first_window"
    id: interface_name

    FloatLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        Label:
            size_hint: 1, .2
            pos_hint: {"y": 0.6}
            text: "Witamy w programie do tworzenia histogramów z plików .csv!"

        FloatLayout:
            pos_hint: {'center_x': .5, 'center_y': .5}

            BoxLayout:
                orientation: 'horizontal'
                size_hint: .3, .1
                pos_hint: {"x": 0.35, 'y': 0.4}

                Label:
                    text: "Wczytaj dane"
                    size_hint: 0.7, 1

                    font_size: 13
                    background_color: (0, 0, 0, 1)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    #text proporties
                    color: (1, 1, 1, 1)
                    bold: True
                    italic: True
                    outline_color: (0, 0, 0)
                    outline_width: 5

                Button:
                    text: "Select a file"
                    on_release: root.manager.current = 'filechooser'

<Filechooser>:
    name: "filechooser"
    id: filechooser_name

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 10
        padding: 10

        BoxLayout:
            FileChooserIconView:
                dirselect: True
                on_selection: filename = root.select(*args)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.2)

            Label:
                id: filename

                text: f'Ścieżka pliku: {filename}'
                pos_hint: {"center_x": .5}
                size_hint: (0.5, 0.5)

            Button:
                text: "Select file"
                size: (100, 50)
                size_hint: (None, None)
                on_release: root.manager.current = 'Select_alg'


<Select_alg>:
    name: "Select_alg"
    id: Select_alg

    FloatLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        Label:
            size_hint: 1, .2
            pos_hint: {"y": 0.8}
            text: "Wybierz algorytm, którym chcesz posortować dane:"

        BoxLayout:
            orientation: "vertical"
            size_hint: .3, .5
            pos_hint: {"x": .35, "y": .25}
            spacing: 10
            Button:
                text: "First algorythm"
            Button:
                text: "Second algorythm"
            Button:
                text: "Third algorythm"
            Button:
                text: "Fourth algorythm"